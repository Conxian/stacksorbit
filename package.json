{
  "name": "stacksorbit",
  "version": "1.2.0",
  "description": "Ultimate deployment tool for Stacks blockchain with enhanced CLI, monitoring, chainhooks, and user-friendly experience",
  "main": "bin/enhanced-stacksorbit.js",
  "bin": {
    "stacksorbit": "./bin/enhanced-stacksorbit.js"
  },
  "scripts": {
    "start": "node bin/enhanced-stacksorbit.js",
    "setup": "python setup_wizard.py",
    "deploy": "python ultimate_stacksorbit.py deploy",
    "monitor": "python ultimate_stacksorbit.py monitor",
    "verify": "python ultimate_stacksorbit.py verify",
    "dashboard": "python enhanced_dashboard.py",
    "diagnose": "python ultimate_stacksorbit.py diagnose",
    "detect": "python stacksorbit_auto_detect.py",
    "check": "python conxian_testnet_deploy.py check",
    "gui": "node bin/stacksorbit.js",
    "test": "python test_enhanced_features.py",
    "test:unit": "python -m pytest tests/unit/ -q",
    "test:integration": "python -m pytest tests/integration/ -q",
    "test:gui": "python tests/test_gui.py",
    "test:enhanced": "python test_enhanced_features.py",
    "lint": "eslint bin/*.js && pylint *.py --exit-zero",
    "format": "prettier --write bin/*.js && black *.py",
    "ci": "npm install && python -m pip install --upgrade pip && python -m pip install -e .[dev,test] && npm run lint && npm test",
    "prepare": "python setup.py build",
    "prepublishOnly": "npm run lint && npm test",
    "install-deps": "python -m pip install -r requirements.txt"
  },
  "keywords": [
    "stacks",
    "blockchain",
    "smart-contracts",
    "deployment",
    "clarity",
    "gui",
    "devtools",
    "web3",
    "clarinet",
    "defi"
  ],
  "author": {
    "name": "Anya Chain Labs",
    "email": "dev@anyachainlabs.com",
    "url": "https://anyachainlabs.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anya-org/stacksorbit.git"
  },
  "bugs": {
    "url": "https://github.com/Anya-org/stacksorbit/issues"
  },
  "homepage": "https://github.com/Anya-org/stacksorbit#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
    "@stacks/network": "latest",
    "@stacks/transactions": "latest",
    "@stacks/wallet-sdk": "^7.2.0",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "next": "^16.0.1-canary.3"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "python": {
    "version": ">=3.8",
    "dependencies": [
      "tkinter",
      "pathlib",
      "subprocess",
      "threading",
      "queue"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
